all :
	@echo -----------------------------------------------------------
	gcc util.c -g3 -Wall -std=c99 -c
	@echo -----------------------------------------------------------
	$(MAKE) -C tunalloc
	@echo -----------------------------------------------------------
	$(MAKE) -C iftun
	@echo -----------------------------------------------------------
	$(MAKE) -C extremite
	@echo -----------------------------------------------------------

.PHONY : clean

clean :
	@echo -----------------------------------------------------------
	rm -vf *.o
	@echo -----------------------------------------------------------
	cd tunalloc && $(MAKE) clean
	@echo -----------------------------------------------------------
	cd iftun && $(MAKE) clean
	@echo -----------------------------------------------------------
	cd extremite && $(MAKE) clean
	@echo -----------------------------------------------------------
